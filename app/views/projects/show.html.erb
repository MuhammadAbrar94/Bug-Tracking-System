<div class="card" style="height: 20rem ;width: 58rem; margin: 2rem auto ">
  <div class="card-body" style="text-align: center;">
    <h5 class="card-title"><%=@project.title%></h5>
    <p class="card-text"><%=@project.description%></p>
    <small><%= @project.user.email %></small>
      <div class="pull-right">
        <%= time_ago_in_words(@project.created_at) %> ago
      </div>
  </div>
  <div class="recipe-actions">
  <%= link_to "Edit this project", edit_project_path(@project), 

                                                class: 'btn btn-xs btn-warning' %>
  <%= button_to "Delete this project", project_path(@project), method: :delete,
                                    data: { confirm: "Are you sure you want to delete?" },
                                    class: "btn btn-xs btn-danger" %>
</div>  
<%= link_to "return to recipes listing", projects_path %> 
</div>