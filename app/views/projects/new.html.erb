<h1 style=" margin: 2rem auto ">New the Project</h1>

<div class="row">
  <div class="col-md-12">
    <%= form_for(@project, :html => {class: "form-horizontal", 

                                                                 role: "form"}) do |f| %>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :title %>
        </div>
        <div class="col-md-8">
          <%= f.text_field :title, class: "form-control", 

                                                 placeholder: "Name of project", 
                                                                       autofocus: true %>
        </div>
      </div>
      <div class="form-group">
        <div class="control-label col-md-2">
          <%= f.label :description %>
        </div>
        <div class="col-md-8">
          <%= f.text_area :description, rows: 10, class: "form-control", 
                                    placeholder: "Enter steps to create project" %>
        </div>
      </div>
      <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
          <%= f.submit class: "btn btn-primary btn-lg btn-xlarge" %>
        </div>
      </div>
    <% end %>
    <div class="col-md-4 col-md-offset-4 colormatch">
      [ <%= link_to "Cancel request and return to project listing", projects_path %> ]
    </div>
  </div>
</div>